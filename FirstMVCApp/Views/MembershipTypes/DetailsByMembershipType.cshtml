@model FirstMVCApp.ViewModels.MembershipTypesMembersViewModel

@{
    ViewData["Title"] = "DetailsByMembershipType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsByMembershipType</h1>

<div>
    <h4>MembershipTypesMembersViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<label asp-for="members" class="control-label">Code Snippets for this member</label>
<p>There are @Model.members.Count members for @Model.Name membership</p>
@foreach (var item in Model.members)
{
    <div style="border: 1px solid red;">
        <p>
            @Html.DisplayFor(modelItem=>item.Name)
        </p>
        <p>
            @Html.DisplayFor(modelItem=>item.Title)
        </p>
        <p>
            @Html.DisplayFor(modelItem=>item.Position)
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to Index", "Index")
</div>